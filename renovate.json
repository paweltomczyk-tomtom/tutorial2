{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "widen",
  "automerge": false,
  "prCreation": "manual",
  "dependencyDashboardApproval": true,
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "prHourlyLimit": 30,
  "packageRules": [
    {
      "prCreation": "manual",
      "dependencyDashboardApproval": true,
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    }
  ],
  "separateMajorMinor": false
}


